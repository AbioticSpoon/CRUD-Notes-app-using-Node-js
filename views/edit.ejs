<%- include('partials/_header.ejs') %>

<div class="container">
    <form action="/blogs/<%= blog.id %>?_method=PUT" method="POST" style="width: 40em; margin: 2em auto;">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" autocomplete="off" required value="<%= blog.title %>" >
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" name="description" class="form-control" autocomplete="off" value="<%= blog.description %>">
        </div>
        <div class="form-group">
            <label for="markdown">Markdown</label>
            <textarea name="markdown" id="" cols="5" rows="5" class="form-control" required><%= blog.markdown %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/blogs" class="btn btn-danger">Cancel</a>
    </form>
</div>

<%- include('partials/_footer.ejs') %>